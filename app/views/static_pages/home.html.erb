<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to SF DATE</h1>

    <h2>
      This is the home page of SF DATE, a dating site for SFSU students
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <!-- image that links to a page -->
  <!-- first # is path to image name located in app/assets/images, and the second # is the url of the link -->
  <%= link_to image_tag("#", alt: "Rails"), '#' %>
<% end %>