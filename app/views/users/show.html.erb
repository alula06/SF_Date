<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        <%= @user.age %> years old
        <br>
        From <%= @user.hometown %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <h3>Bio:</h3>
    <hr>
    <%= @user.description %>
    <% if @user.microposts.any? %>
      <h3 class="spacing">Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% else %>
      <h3>Microposts (0)</h3>
      <hr>
      <ol class="microposts">
        No Microposts!
      </ol>
    <% end %>
  </div>
</div>